<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="quizapp">

        <class>entity.Question</class>
        <class>entity.Quiz</class>
        <class>entity.User</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="Fabian"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.password" value="12345" />
        </properties>
    </persistence-unit>
</persistence>
